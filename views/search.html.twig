{% extends "layout.html.twig" %}

{% block title %}Recherche{% endblock %}

{% block content %}
<p>
    <h2 class="text-center"> Recherche </h2> 
    <div class="well">
        <div class="row">
        	<form class="form-signin form-horizontal" role="form" action="{{ path('results') }}" method="post">
		        <div class="form-group">
		            <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
		            <label name="keyword"> mot-clés </label>
		            </div>
		            <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
		            <input type="text" name="keyword" class="form-control" placeholder="Mot-clés.." autofocus>
		            </div>
		        </div>
		        <br>
		        <div class="form-group">
		        	<div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
		            <label name="categorie"> Categorie </label>
		            </div>
		            <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
		                <select name="categorie">
		                	<option value=-1>Toute</option>
		                	{% for categorie in categories %}
		                	<option value= {{categorie.id }}> {{categorie.title}} </option>
		                	{% endfor %}
		                </select>
		            </div>
		        </div>
		         <br>
		        <div class="form-group">
		            <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
		                <button type="submit" class="btn btn-default btn-primary"><span class="glyphicon glyphicon-search"></span> Rechercher</button>
		            </div>
		        </div>
    		</form>
        </div>
    </div>
</p>
{% endblock %}