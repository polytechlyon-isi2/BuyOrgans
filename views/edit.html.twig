{% extends 'layout.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
<div class="well">
    {{ form_start(userForm, { 'attr': {'class': 'form-horizontal', 'data-toggle' : 'validator'} }) }}
        <div class="form-group">
            {{ form_label(userForm.city, null, { 'label_attr':  {
                'class': 'col-sm-5 control-label',
            }}) }}
            <div class="col-sm-4">
                {{ form_widget(userForm.city, { 'attr':  {
                    'class': 'form-control',
                }}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(userForm.address, null, { 'label_attr':  {
                'class': 'col-sm-5 control-label',
            }}) }}
            <div class="col-sm-4">
                {{ form_widget(userForm.address, { 'attr':  {
                    'class': 'form-control',
                }}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(userForm.postalcode, null, { 'label_attr':  {
                'class': 'col-sm-5 control-label',
            }}) }}
            <div class="col-sm-4">
                {{ form_widget(userForm.postalcode, { 'attr':  {
                    'class': 'form-control',
                    'pattern' : '[0-9]+'
                }}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-3">
                <input type="submit" class="btn btn-primary" value="Modifier" />
            </div>
        </div>
    {{ form_end(userForm) }}
</div>
{% endblock %}